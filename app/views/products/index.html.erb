<div class="jumbotron">
  <h1 class="page-title">Green Gems</h1>
  <p class="paragraph-intro">Welcome to Green Gems Shop</p>
</div>

<div class="container">
  <div>
    <h1 class="cart-text"><%= render 'layouts/cart_text' %></h1>
  </div>

<!--  <tr>
  <th><%#sortable "name" %></th>
  <th><%#sortable "price" %></th>
</tr> -->

  <div>
    <%= link_to "A to Z", atoz_products_path, class: "link" %><br>
    <%= link_to "Z to A", ztoa_products_path, class: "link" %><br>
    <%= link_to "Price up", priceup_products_path, class: "link" %><br>
    <%= link_to "Price down", pricedown_products_path, class: "link" %><br>
  </div>

    <%= form_tag products_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
  

  <h3 class="text-center">Our Plant Catalog</h3>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <% @products.each do |product| %>
          <%= render "product_row",  product: product, order_item: @order_item %>
    <% end %>
    </div>
  </div>

  <div class="text-center">
    <% if can? :create, @product %>
    <%= link_to "New Product", new_product_path, class: "btn btn-default"  %>
    <% end %>
  </div>


</div>
