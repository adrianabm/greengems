<div class="container padding-top-bottom">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h2 class="page-title"><%= @product.name %></h2>
      <p class="product-description"><%= @product.description %></p>
      <h4 class="page-title">$
      <span class="page-title"><%= @product.price %></span></h4>
      <!-- buttons  -->
      <div class="btn-inline">
        <div class="btn-showpage">
          <%= link_to "Back", root_path, class: "btn btn-default" %>
        </div>
        <div class="btn-showpage">
          <% if can? :update, @product %>
            <%= link_to "Edit", edit_product_path, class: "btn btn-default" %>
          <% end %>
        </div>
        <div class="btn-showpage">
          <% if can? :delete, @product %>
            <%= link_to "Delete", product_path(@product.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-6">
      <% @product.photos.each do |photo| %>
        <%= image_tag photo.image, class: "img-show" %>
      <% end %>
    </div>
  </div>
</div>
