<div class="container">

  <h2><%= @product.name %></h2>

  <h4 class="show-plants">Product Description<h4>
  <p class="product-description"><%= @product.description %></p>

  <h4 class="show-plants">Price</h4>
  <p class="product-description"><%= @product.price %></p>

  <div>
    <h4 class="show-plants">Photos</h4>
    <% @product.photos.each do |photo| %>
        <%= image_tag photo.image.thumbnail %>
    <% end %>
  </div>
</div>


  <div class="back-button">
    <%= link_to "Back", root_path, class: "btn btn-default" %>
  </div>
</div>
